<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout


        xmlns:android="http://schemas.android.com/apk/res/android"

                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"


                android:id="@+id/container"

                tools:context="com.luzyanin.menu.MainMenuActivity"
                android:orientation="vertical"
                android:weightSum="1">


    <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cv7"
            android:layout_marginTop="46dp" android:layout_below="@+id/cv3" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginLeft="30dp" android:layout_marginStart="30dp">

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/cv3" android:layout_alignParentTop="true" android:layout_alignLeft="@+id/cv7"
            android:layout_alignStart="@+id/cv7" android:layout_marginTop="35dp">


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:id="@+id/button_02"
                    android:background="@drawable/add_100_100"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:textAlignment="textStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"/>
            <TextView
                    android:text="Добавить прибор учета"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:layout_row="2"
                    android:layout_column="1" android:layout_weight="0.51"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
