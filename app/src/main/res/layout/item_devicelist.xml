<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="5dp"

              android:orientation="vertical">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cv1">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">


            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:id="@+id/watertoolsView"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"/>
            <TextView
                    android:id="@+id/tv_devicelist_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:layout_weight="1"
                    android:hint="Name"
                    android:layout_toRightOf="@+id/watertoolsView"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="5dp"/>
            <TextView
                    android:id="@+id/tv_devicelist_address"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/watertoolsView"
                    android:layout_below="@+id/tv_devicelist_name1"/>
            <TextView
                    android:id="@+id/tv_devicelist_rssi1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/watertoolsView"
                    android:layout_below="@+id/tv_devicelist_address"
                    android:layout_centerVertical="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>